{
   "rules":{
      "accounts":{
         "$account_id":{
            ".read":"root.child('authorizations/'+auth.uid+'/'+$account_id+'/read').val() == true || root.child('users/'+auth.uid+'/accountId').val() == $account_id"
         }
      },
      "users":{
         "$uid":{
            ".read":"auth != null && auth.uid == $uid",
            ".write":"auth != null && auth.uid == $uid"
         }
      },
      "authorizations":{
         "$uid":{
            ".read":"auth != null && auth.uid == $uid",
            ".write":"auth != null && auth.uid == $uid"
         }
      }
   }
}